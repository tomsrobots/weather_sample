<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/image_weather_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/sunny"
        android:contentDescription="@string/cont_weather_icon"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temperature"
        android:id="@+id/text_temperature"
        android:layout_alignBottom="@+id/image_weather_icon"
        android:layout_toEndOf="@id/image_weather_icon"
        android:textStyle="bold"
        android:textSize="65sp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/date"
        android:id="@+id/text_date"
        android:layout_toEndOf="@id/text_temperature"
        android:layout_alignBottom="@+id/image_weather_icon"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textSize="28sp"
        android:layout_marginEnd="15dp" />
</RelativeLayout>